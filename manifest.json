{
    "manifest_version": 3,
    "name": "Todoist - Plan My Day",
    "version": "1.3.1",
    "description": "Fetch today's Todoist tasks, review one-by-one, reschedule & label, and update.",
    "action":
    {
        "default_popup": "popup.html",
        "default_title": "Todoist - Plan My Day"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "assets/icon-16.png", 
        "32": "assets/icon-32.png",
        "64": "assets/icon-64.png",
        "128": "assets/icon-128.png"
    },
    "permissions":
    [
        "storage"
    ],
    "host_permissions":
    [
        "https://api.todoist.com/*",
        "https://app.todoist.com/*"
    ]
}